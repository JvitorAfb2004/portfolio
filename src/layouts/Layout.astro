---
interface Props {
  title: string;
  description?: string;
  image?: string;
  canonicalURL?: string;
}

const { 
  title, 
  description = "João Vitor - Desenvolvedor Full-Stack especializado em Node.js, React, Vue.js e desenvolvimento mobile. Criação de sistemas web, APIs RESTful, aplicativos mobile e soluções SaaS escaláveis.",
  image = "/og.image.png",
  canonicalURL = Astro.url.href
} = Astro.props;

const siteName = "João Vitor - Portfolio";
const siteUrl = "https://jvitor.tech";
---

<!doctype html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta name="keywords" content="desenvolvedor full-stack, node.js, react, vue.js, typescript, desenvolvimento web, aplicações mobile, APIs REST, desenvolvimento de software, programador, frontend, backend" />
    <meta name="author" content="João Vitor" />
    <meta name="robots" content="index, follow" />
    <meta name="language" content="pt-BR" />
    <meta name="revisit-after" content="7 days" />
    
    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="apple-touch-icon" href="/favicon.png" />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, siteUrl)} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:site_name" content={siteName} />
    <meta property="og:locale" content="pt_BR" />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL(image, siteUrl)} />
    
    <!-- Additional Meta Tags -->
    <meta name="theme-color" content="#a476ff" />
    <meta name="msapplication-TileColor" content="#a476ff" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
    
    <!-- Preconnect for Performance -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="dns-prefetch" href="https://fonts.googleapis.com" />
    
    <!-- Fonts with Performance Optimization -->
    <link
      rel="preload"
      as="style"
      href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap"
    />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap"
      media="print"
      onload="this.media='all'"
    />
    <noscript>
      <link
        rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap"
      />
    </noscript>
    
    <!-- Structured Data / Schema.org -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "Person",
      "name": "João Vitor",
      "jobTitle": "Desenvolvedor Full-Stack",
      "description": "Desenvolvedor Full-Stack especializado em Node.js, React, Vue.js e desenvolvimento mobile",
      "url": siteUrl,
      "image": new URL(image, siteUrl),
      "sameAs": [
        "https://github.com/JvitorAfb2004",
        "https://linkedin.com/in/jvitorafb"
      ],
      "knowsAbout": [
        "Node.js",
        "React",
        "Vue.js",
        "TypeScript",
        "JavaScript",
        "Mobile Development",
        "Web Development",
        "API Development",
        "PostgreSQL",
        "MySQL",
        "Redis",
        "Docker"
      ],
      "worksFor": {
        "@type": "Organization",
        "name": "Freelancer"
      },
      "address": {
        "@type": "PostalAddress",
        "addressCountry": "BR"
      }
    })} />
    
    <!-- Performance and Security -->
    <meta http-equiv="X-Content-Type-Options" content="nosniff" />
    <meta http-equiv="X-Frame-Options" content="DENY" />
    <meta http-equiv="X-XSS-Protection" content="1; mode=block" />
    <meta http-equiv="Referrer-Policy" content="strict-origin-when-cross-origin" />
    
    <title>{title}</title>
  </head>
  <body class="bg-[--background] md:px-48 lg:px-20 px-9">
    <slot />
    <div id="projectModal" class="fixed inset-0 bg-black bg-opacity-75 flex items-center justify-center z-50 hidden">
      <div class="bg-[#1a1a1a] rounded-lg shadow-xl p-6 m-4 max-w-lg w-full border border-[#ffffff10]">
        <div class="flex justify-between items-center mb-4">
          <h4 id="modalTitle" class="text-2xl font-semibold text-[var(--white)]"></h4>
          <button onclick="closeModal()" class="text-[var(--white-icon)] hover:text-white">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
              <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>
        <div id="modalDetails" class="text-[var(--white-icon)] text-sm">
        </div>
      </div>
    </div>
  </body>
  <script>
    const modal = document.querySelector('#projectModal') as HTMLElement | null;
    const modalTitle = document.querySelector('#modalTitle') as HTMLElement | null;
    const modalDetails = document.querySelector('#modalDetails') as HTMLElement | null;

    function openModal(buttonElement: HTMLElement) {
      const title = buttonElement.getAttribute('data-project-title');
      const details = buttonElement.getAttribute('data-project-details');

      if (modalTitle && modalDetails) {
        modalTitle.textContent = title;
        modalDetails.textContent = details;
      }

      if (modal) {
        modal.classList.remove('hidden');
        modal.style.display = 'flex';

        modal.addEventListener('click', handleModalClick);
      }
    }

    function closeModal() {
      if (modal) {
        modal.classList.add('hidden');
        modal.style.display = 'none';

        modal.removeEventListener('click', handleModalClick);
      }
    }

    function handleModalClick(event: MouseEvent) {
      if (modal && event.target === modal) {
        closeModal();
      }
    }

    (window as any).openModal = openModal;
    (window as any).closeModal = closeModal;
  </script>
</html>

<style is:global>
  :root {
    --background: #0a0a0a;
    --sec: #a476ff;
    --white: #ffffff;
    --white-icon: #e5e5e5;
    --white-icon-tr: #ffffff10;
    --component-bg: #1a1a1a;
    --gradient-primary: linear-gradient(135deg, #a476ff 0%, #5e4491 100%);
    --gradient-secondary: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  }

  * {
    font-family:
      "montserrat",
      -apple-system,
      system-ui,
      sans-serif;
    box-sizing: border-box;
    padding: 0;
    margin: 0;
  }

  body {
    padding-bottom: 80px;
    background: var(--background);
    color: var(--white);
    overflow-x: hidden;
  }

  @media (min-width: 768px) {
    body {
      padding-bottom: 0;
    }
  }

  *::selection {
    background-color: var(--sec);
    color: var(--background);
  }

  /* Scrollbar styles melhorados */
  ::-webkit-scrollbar {
    width: 12px;
  }

  ::-webkit-scrollbar-track {
    background: var(--background);
    border-radius: 10px;
  }

  ::-webkit-scrollbar-thumb {
    background: linear-gradient(135deg, var(--sec), #5e4491);
    border-radius: 10px;
    border: 2px solid var(--background);
  }

  ::-webkit-scrollbar-thumb:hover {
    background: linear-gradient(135deg, #b886ff, #6b4fa3);
  }

  /* Scrollbar styles for Firefox */
  * {
    scrollbar-width: thin;
    scrollbar-color: var(--sec) var(--background);
  }

  #projectModal {
    display: none;
  }

  /* Efeitos globais */
  .glass-effect {
    background: rgba(26, 26, 26, 0.8);
    backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .gradient-text {
    background: var(--gradient-primary);
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
  }

  .glow-effect {
    box-shadow: 0 0 20px rgba(164, 118, 255, 0.3);
  }

  .glow-effect:hover {
    box-shadow: 0 0 30px rgba(164, 118, 255, 0.5);
  }

  /* Animações globais */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fadeInLeft {
    from {
      opacity: 0;
      transform: translateX(-30px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @keyframes fadeInRight {
    from {
      opacity: 0;
      transform: translateX(30px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @keyframes pulse-glow {
    0%, 100% {
      box-shadow: 0 0 20px rgba(164, 118, 255, 0.3);
    }
    50% {
      box-shadow: 0 0 40px rgba(164, 118, 255, 0.6);
    }
  }

  .animate-fade-in-up {
    animation: fadeInUp 0.6s ease-out;
  }

  .animate-fade-in-left {
    animation: fadeInLeft 0.6s ease-out;
  }

  .animate-fade-in-right {
    animation: fadeInRight 0.6s ease-out;
  }

  .animate-pulse-glow {
    animation: pulse-glow 2s ease-in-out infinite;
  }

  /* Melhorias de performance */
  .will-change-transform {
    will-change: transform;
  }

  .will-change-opacity {
    will-change: opacity;
  }

  /* Efeitos de hover globais */
  .hover-lift {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .hover-lift:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
  }

  .hover-glow {
    transition: box-shadow 0.3s ease;
  }

  .hover-glow:hover {
    box-shadow: 0 0 30px rgba(164, 118, 255, 0.4);
  }
</style>
